@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>无标题文档</title>
    <script src="../../Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <link href="../../Res/Admin/css/select.css" rel="stylesheet" type="text/css" />
    <link href="../../Res/Admin/css/style.css" rel="stylesheet" type="text/css" />
    <script src="../../Res/Admin/js/jquery.js" type="text/javascript"></script>
    <script src="../../Res/Admin/js/jquery.idTabs.min.js" type="text/javascript"></script>
    <script src="../../Res/Admin/js/select-ui.min.js" type="text/javascript"></script>    
    <script type="text/javascript">
        $(document).ready(function (e) {
            $(".select1").uedSelect({
                width: 345
            });
            $(".select2").uedSelect({
                width: 167
            });
            $(".select3").uedSelect({
                width: 100
            });
        });
        function AfterSuccess(data) {
            if (data == "ok") {
                alert("用户添加成功！");
                window.location.href = "/Admin/LinkManage";
            }
            else if (data == "no") {
                alert("用户添加失败！");
                window.location.href = "/Admin/LinkManage";
            }
            else {
                alert(data);
            }
        }
        function exit() {
            if (confirm("确定要退出么？")) {
                window.location.href = "/Login/UserManage";
            }
        }
    </script>
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li>用户管理</li>            
            <li>添加用户</li>
        </ul>
    </div>
    <div class="formbody">
        <div id="usual1" class="usual">
            <div class="itab">
                <ul>
                    <li><a href="#tab1" class="selected">新增用户</a></li>
                </ul>
            </div>
            <div id="tab1" class="tabson">
                <div class="formtext">
                    <b>你正在添加用户</b></div>
                    @using (Ajax.BeginForm("AddUser", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "AfterSuccess" }, new { id = "form1" }))
                    {                                                                                
                <ul class="forminfo">
                    <li>                    
                        <label>
                            用户名<b>*</b></label><input name="Name" type="text" class="dfinput" style="width: 518px;" /></li>
                    <li>
                        <label>
                            密码<b>*</b></label>
                        <input name="Password" type="password" class="dfinput" style="width: 518px;" /></li>
                   <li>
                        <label>
                            重复密码<b>*</b></label>
                        <input name="RePassword" type="password" class="dfinput" style="width: 518px;" /></li>                                       
                    <li>
                        <label>
                            &nbsp;</label><input type="submit" class="btn" value="添加用户" /><label>
                            &nbsp;</label><input type="button" class="btn" onclick="exit()" value="退出" style="padding-right:25px"/> </li>                            
                </ul>
                }               
            </div>            
        </div>
    </div>
</body>
</html>
