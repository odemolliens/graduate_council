@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>研究生学生会网站后台登陆</title>
    <script src="../../Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <link href="../../Res/Admin/css/style.css" rel="stylesheet" type="text/css" />
    <script src="../../Res/Admin/js/jquery.js" type="text/javascript"></script>
    <script src="../../Res/Admin/js/cloud.js" type="text/javascript"></script>
    <script type="text/javascript">
        function afterLogin(data) {
            var serviceData = data.split(':');
            if (serviceData[0] == 'ok1') {
                window.location.href = "/Admin/Index";
            } else if (serviceData[0] == 'no') {
                $("#ErrorMsg").text(serviceData[1]);
            }else if (serviceData[0]=="ok2"){
                window.location.href = "/User/Index";
            }
            else {
                $("#ErrorMsg").text("系统繁忙");
            }
        }
        $(function () {
            $('.loginbox').css({ 'position': 'absolute', 'left': ($(window).width() - 692) / 2 });
            $(window).resize(function () {
                $('.loginbox').css({ 'position': 'absolute', 'left': ($(window).width() - 692) / 2 });
            })
        });
    </script>
</head>
<body style="background-color: #1c77ac; background-image: url(/images/light.png);
    background-repeat: no-repeat; background-position: center top; overflow: hidden;">
    <div id="mainBody">
        <div id="cloud1" class="cloud">
        </div>
        <div id="cloud2" class="cloud">
        </div>
    </div>
    <div class="logintop">
        <span>研究生学生会网站后台登陆</span>
    </div>
    <div class="loginbody">
        <span class="systemlogo"></span>
        <div class="loginbox">
            @using (Ajax.BeginForm("UserLogin", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterLogin" }, new { id = "loginForm" }))
            {
                <ul>
                    <li>
                        <input type="text" name="UserName" class="loginuser" /></li>
                    <li>
                        <input type="password" name="Password" class="loginpwd" /></li>
                    <li>
                        <input type="submit" class="loginbtn" value="登录" /><span id="ErrorMsg"></span></li>
                </ul>
            }
        </div>
    </div>
</body>
</html>