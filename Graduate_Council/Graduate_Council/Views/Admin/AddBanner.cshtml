@{
    Layout = null;
} 
<!DOCTYPE html>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>无标题文档</title>
    <script src="../../Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <link href="../../Res/Admin/css/select.css" rel="stylesheet" type="text/css" />
    <link href="../../Res/Admin/css/style.css" rel="stylesheet" type="text/css" />
    <script src="../../Res/Admin/js/jquery.js" type="text/javascript"></script>
    <script src="../../Res/Admin/js/jquery.idTabs.min.js" type="text/javascript"></script>
    <script src="../../Res/Admin/js/select-ui.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.form.js" type="text/javascript"></script>    
    <script type="text/javascript">
        $(document).ready(function (e) {
            $(".select1").uedSelect({
                width: 345
            });
            $(".select2").uedSelect({
                width: 167
            });
            $(".select3").uedSelect({
                width: 100
            });
        });
        $(function () {
            fileUpload();
        })
        function AfterSuccess(data) {
            if (data == "ok") {
                alert("添加图片成功！");
                window.location.href = "/Admin/BannerManage";
            }
            else if (data == "no") {
                alert("添加图片失败！");
            }
            else {
                alert(data);
            }
        }
        function exit() {
            if (confirm("确定要退出么？")) {
                window.location.href = "/Admin/BannerManage";
            }
        }
        function fileUpload() {
            $("#upLoadbtn").click(function () {
                if ($("#uploadImg").val() == "") {
                    alert("请选择文件");
                    return;
                }
                else {
                    $("#form1").ajaxSubmit({
                        type: "post",
                        url: "/Admin/FileUpload",
                        success: function (data) {
                            var serverDate = data.split(':');
                            if (serverDate[0] == "ok") {
                                $("#showImg").append("<img src='" + serverDate[1] + "' width='600px' height='100px'/>");
                                $("#hide").append("<input type='hidden' name='Path' value='" + serverDate[1] + "'/>");
                            }
                        }
                    })
                }
            })
        }        
    </script>
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li>图片管理</li>                       
            <li>添加图片</li>
        </ul>
    </div>
    <div class="formbody">
        <div id="usual1" class="usual">
            <div class="itab">
                <ul>
                    <li><a href="#tab1" class="selected">添加图片</a></li>
                </ul>
            </div>
            <div id="tab1" class="tabson">
                <div class="formtext">
                    <b>你正在添加图片</b></div>
                    @using (Ajax.BeginForm("UpdateBanner", new { }, new AjaxOptions() { HttpMethod = "post" }, new { id = "form1", enctype = "multipart/form-data" }))
                    {                                                                                                                         
                <ul class="forminfo">
                <li>                    
                        <label>
                            请选择图片<b>*</b></label>
                       <input type="file" id="uploadImg" name="uploadImg" class="dfinput"/><input type="button" id="upLoadbtn" value="上传图片" class="dfinput"/></li>                    
                    <li>                    
                    <div id="showImg"></div>
                    </li>
                    </ul>
                    }
                    @using (Ajax.BeginForm("AddBanner", new AjaxOptions() { HttpMethod = "post", OnSuccess = "AfterSuccess" }))
                    {
                    <ul>                                           
                    <li><label>
                            是否显示图片<b>*</b></label><input name="IsVisible" type="checkbox" class="dfinput"/>显示图片请勾选</li>                    
                    <li>
                        <label>
                            &nbsp;</label><input type="submit" class="btn" value="添加图片" /><label>                            
                            &nbsp;</label><input type="button" class="btn" onclick="exit()" value="退出"/> </li>                                        
                        </ul>                        
                        <div id="hide"></div>
                    }                                                        
            </div>            
        </div>
    </div>
</body>
</html>
